                             "-platform", "linux-g++",
                             "-optimized-qmake",
                             "-nomake", "examples",
                             "-nomake", "tests",
                             "-system-harfbuzz",
                             "-system-sqlite",
                             "-accessibility",
                             "-dbus-linked",
                             "-fontconfig",
                             "-glib",
                             "-icu",
                             "-openssl-linked",
                             "-no-pch",
                             "-no-rpath",
                             "-no-directfb",
                             "-no-linuxfb",
                             "-no-kms",
                             "-no-cups",
                             "-system-proxies",
                             "-gtk",

                             "-archdatadir", "/usr/lib/"
                           ],
