                {
                    "type": "patch",
                    "path": "patch/qtbase-buildabsoluteglesv2.patch"
                },
                {
                    "type": "patch",
                    "path": "patch/qtbase-filechooser-properly-convert-filename.patch"
                },
                {
                    "type": "shell",
                    "commands": [ "mv configure configure.qt" ]
                },
                {
                    "type": "script",
                    "commands": [
                        "processed=`sed -e 's/--/-/g ; s/=/ /g' <<< $@`",
                        "./configure.qt $processed"
