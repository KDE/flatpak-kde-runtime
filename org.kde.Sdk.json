                },
                {
                    "type": "patch",
                    "path": "patch/qtbase-flatpak-portals-services.patch"
                },
                {
                    "type": "script",
                    "commands": [
                        "processed=`sed -e 's/--/-/g ; s/=/ /g' <<< $@`",
                        "./configure.qt $processed"
