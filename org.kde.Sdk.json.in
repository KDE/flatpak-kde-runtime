            "sources": [ { "type": "archive", "url": "https://download.qt.io/official_releases/qt/6.5/6.5.1/submodules/qtwebsockets-everywhere-src-6.5.1.tar.xz", "sha256": "6b8f66b250a675117aae35b48dbfc589619be2810a759ad1712a9cd20561da19" } ]
        },
        {
            "name": "qt6-qtscxml",
            "buildsystem": "cmake-ninja",
            "cleanup-platform": [ "/bin" ],
            "sources": [ { "type": "archive", "url": "https://download.qt.io/official_releases/qt/6.5/6.5.1/submodules/qtscxml-everywhere-src-6.5.1.tar.xz", "sha256": "1c3ea3c8bb52c30e06ff113b4deaeb30d664d592afba650f0c1910b30a002477" } ]
        },
        {
            "name": "qt6-qtcharts",
            "buildsystem": "cmake-ninja",
            "cleanup-platform": [ "/bin" ],
            "sources": [ { "type": "archive", "url": "https://download.qt.io/official_releases/qt/6.5/6.5.1/submodules/qtcharts-everywhere-src-6.5.1.tar.xz", "sha256": "b15b500fc7e75b8881d5fe19bd13418213bc5f7834eadc9fb00edc084e92cf75" } ]
        },
        {
            "name": "qt6-qt3d",
            "buildsystem": "cmake-ninja",
            "cleanup-platform": [ "/bin" ],
            "sources": [ { "type": "archive", "url": "https://download.qt.io/official_releases/qt/6.5/6.5.1/submodules/qt3d-everywhere-src-6.5.1.tar.xz", "sha256": "7e54e1e810ba57b510002b899d9b63d611b287691731739665c1a1b26139689b" } ]
        },
        {
            "name": "qt6-qtnetworkauth",
            "buildsystem": "cmake-ninja",
            "cleanup-platform": [ "/bin" ],
            "sources": [ { "type": "archive", "url": "https://download.qt.io/official_releases/qt/6.5/6.5.1/submodules/qtnetworkauth-everywhere-src-6.5.1.tar.xz", "sha256": "a730b56a3e96fa70e3908209ba6cafe67e93c3dfe50541538f8b7d8503d971a3" } ]
