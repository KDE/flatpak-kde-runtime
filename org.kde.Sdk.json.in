            "sources": [ { "type": "archive", "url": "https://download.qt.io/official_releases/qt/6.4/6.4.3/submodules/qttranslations-everywhere-src-6.4.3.tar.xz", "sha256": "79e56b7800d49649a8a8010818538c367a829e0b7a09d5f60bd3aecf5abe972c" } ]
        },
        {
            "name": "qt6-qtremoteobjects",
            "buildsystem": "cmake-ninja",
            "cleanup-platform": [ "/bin" ],
            "sources": [ { "type": "archive", "url": "https://download.qt.io/official_releases/qt/6.4/6.4.3/submodules/qtremoteobjects-everywhere-src-6.4.3.tar.xz", "sha256": "9c9447df79cba249191d8628b6a6910658a7882d14114977f5d69c69440c186a" } ]
