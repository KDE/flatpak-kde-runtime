        },
        {
            "name": "qt6-qtsensors",
            "buildsystem": "cmake-ninja",
            "cleanup-platform": [ "/bin" ],
            "sources": [ { "type": "archive", "url": "https://download.qt.io/official_releases/qt/6.4/6.4.3/submodules/qtsensors-everywhere-src-6.4.3.tar.xz", "sha256": "5f3964fa2889456736a0bdf07221105fd67853539496e2d3ba2f380a47babc48" } ]
        },
        {
            "name": "qt6-qtimageformats",
