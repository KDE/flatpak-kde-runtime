            "sources": [ { "type": "archive", "url": "https://download.qt.io/official_releases/qt/6.4/6.4.3/submodules/qtwebsockets-everywhere-src-6.4.3.tar.xz", "sha256": "de27357eb55c5e83ae560371d7f76b36b5b2ba85caf8965c527f1d5d4b8d458f" } ]
        },
        {
            "name": "qt6-qtscxml",
            "buildsystem": "cmake-ninja",
            "cleanup-platform": [ "/bin" ],
            "sources": [ { "type": "archive", "url": "https://download.qt.io/official_releases/qt/6.4/6.4.3/submodules/qtscxml-everywhere-src-6.4.3.tar.xz", "sha256": "fe722c016d434c02e713e3c7d5d4a845998efe69d8b645923e83f1f4f7b72f3a" } ]
        },
        {
            "name": "qt6-qtcharts",
            "buildsystem": "cmake-ninja",
            "cleanup-platform": [ "/bin" ],
            "sources": [ { "type": "archive", "url": "https://download.qt.io/official_releases/qt/6.4/6.4.3/submodules/qtcharts-everywhere-src-6.4.3.tar.xz", "sha256": "4a61e4f5ffb55df69fc58f88255aabca44fb51935b180c03ab81e098d437c346" } ]
        },
        {
            "name": "qt6-qt3d",
            "buildsystem": "cmake-ninja",
            "cleanup-platform": [ "/bin" ],
            "sources": [ { "type": "archive", "url": "https://download.qt.io/official_releases/qt/6.4/6.4.3/submodules/qt3d-everywhere-src-6.4.3.tar.xz", "sha256": "a88225f997253d1605afced4eaac5c2c4b368fd90cd5e076a90bd7d1b2ae3d71" } ]
        },
        {
            "name": "qt6-qtnetworkauth",
            "buildsystem": "cmake-ninja",
