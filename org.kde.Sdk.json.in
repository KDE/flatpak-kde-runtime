        },
        {
            "name": "qt6-qtpositioning",
            "buildsystem": "cmake-ninja",
            "cleanup-platform": [ "/bin" ],
            "sources": [ { "type": "archive", "url": "https://download.qt.io/official_releases/qt/6.5/6.5.1/submodules/qtpositioning-everywhere-src-6.5.1.tar.xz", "sha256": "053cf940e18880c53ec35022d495c75fdb3adf762dbb3b4a6e48341f7a0ea422" } ]
        },
        {
            "name": "qt6-qtsvg",
            "buildsystem": "cmake-ninja",
