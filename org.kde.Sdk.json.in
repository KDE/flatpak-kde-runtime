            "sources": [ { "type": "archive", "url": "https://download.qt.io/official_releases/qt/6.4/6.4.3/submodules/qtwebchannel-everywhere-src-6.4.3.tar.xz", "sha256": "e955044587f0e74a64c88bbbe4d6be9fd869ac89d66a96cce4752756bcbef3a8" } ]
        },
        {
            "name": "qt6-qtpositioning",
            "buildsystem": "cmake-ninja",
            "cleanup-platform": [ "/bin" ],
            "sources": [ { "type": "archive", "url": "https://download.qt.io/official_releases/qt/6.4/6.4.3/submodules/qtpositioning-everywhere-src-6.4.3.tar.xz", "sha256": "b218b1e1d37c12e2935ae90600d8b42ef68f90617fe8677ec89f0b0f05bcd70c" } ]
        },
        {
            "name": "qt6-qtsvg",
            "buildsystem": "cmake-ninja",
            "cleanup-platform": [ "/bin" ],
            "sources": [ { "type": "archive", "url": "https://download.qt.io/official_releases/qt/6.4/6.4.3/submodules/qtsvg-everywhere-src-6.4.3.tar.xz", "sha256": "88315f886cf81898705e487cedba6e6160724359d23c518c92c333c098879a4a" } ]
