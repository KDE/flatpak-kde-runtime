            "sources": [ { "type": "archive", "url": "https://download.qt.io/official_releases/qt/6.4/6.4.3/submodules/qtnetworkauth-everywhere-src-6.4.3.tar.xz", "sha256": "4d115ba572f4b8c8fbb64f4c26a40723556d252bd337a643f2266f19c7716ae5" } ]
