            "sources": [ { "type": "archive", "url": "https://download.qt.io/official_releases/qt/6.4/6.4.3/submodules/qtimageformats-everywhere-src-6.4.3.tar.xz", "sha256": "0aff58062e74b84617c5da8325d8cdad5368d8f4d2a11ceafcd58329fe99b798" } ]
        },
        {
            "name": "qt6-connectivity",
            "buildsystem": "cmake-ninja",
