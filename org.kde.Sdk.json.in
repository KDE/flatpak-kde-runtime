            "sources": [ { "type": "archive", "url": "https://download.qt.io/official_releases/qt/6.5/6.5.1/submodules/qtmultimedia-everywhere-src-6.5.1.tar.xz", "sha256": "0b1fc560e1c8cdda1ddb13db832c3b595f7e4079118d4847d8de18d82464e1cc" } ]
        },
        {
            "name": "qt6-qtsensors",
            "buildsystem": "cmake-ninja",
            "cleanup-platform": [ "/bin" ],
            "sources": [ { "type": "archive", "url": "https://download.qt.io/official_releases/qt/6.5/6.5.1/submodules/qtsensors-everywhere-src-6.5.1.tar.xz", "sha256": "c95aca8371c2909255d908f4d78a0bfd975a83a73ed882eabc561d444864aba5" } ]
        },
        {
            "name": "qt6-qtimageformats",
