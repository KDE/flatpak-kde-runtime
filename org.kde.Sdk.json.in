            "sources": [ { "type": "archive", "url": "https://download.qt.io/official_releases/qt/6.5/6.5.1/submodules/qtwayland-everywhere-src-6.5.1.tar.xz", "sha256": "7c1f1ea19831c9c28b0128cf7ccfb22baf46c5cda30a97d0e6997dfd9a0a974d" } ]
        },
        {
            "name": "qt6-qtserialport",
