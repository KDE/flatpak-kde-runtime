            "sources": [ { "type": "archive", "url": "https://download.qt.io/official_releases/qt/6.4/6.4.2/submodules/qtwayland-everywhere-src-6.4.2.tar.xz", "sha256": "24cf1a0af751ab1637b4815d5c5f3704483d5fa7bedbd3519e6fc020d8be135f" } ]
        },
        {
            "name": "qt6-qtserialport",
            "buildsystem": "cmake-ninja",
