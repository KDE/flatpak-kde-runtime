            "sources": [ { "type": "archive", "url": "https://download.qt.io/official_releases/qt/6.5/6.5.1/submodules/qtsvg-everywhere-src-6.5.1.tar.xz", "sha256": "d58d29491d44f0f59b684686a9898fec0e6c4fb7c09d9393b4e9c211fe9608ef" } ]
        },
        {
            "name": "qt6-qtmultimedia",
