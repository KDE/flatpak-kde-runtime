        {
            "name": "qt6-qt5compat",
            "buildsystem": "cmake-ninja",
            "cleanup-platform": [ "/bin" ],
            "sources": [ { "type": "archive", "url": "https://download.qt.io/official_releases/qt/6.5/6.5.1/submodules/qt5compat-everywhere-src-6.5.1.tar.xz", "sha256": "ae992b295fefabef2445beb3a8ec31c40fa0fb2c01603eaf2acfdb4a0054fb83" } ]
        },
        {
            "name": "extra-cmake-modules",
            "cleanup-platform": ["*"],
            "buildsystem": "cmake-ninja",
            "config-opts": [ "-DBUILD_TESTING=OFF" ],
            "sources": [ { "type": "git", "url": "https://invent.kde.org/frameworks/extra-cmake-modules.git", "tag": "v5.106.0" } ]
        },
        {
            "name": "fcitx5-platforminputcontext",
            "buildsystem": "cmake-ninja",
            "config-opts": [ "-DENABLE_QT4=OFF", "-DENABLE_QT5=OFF", "-DENABLE_QT6=ON", "-DBUILD_ONLY_PLUGIN=ON" ],
            "sources": [ { "type": "git", "url": "https://github.com/fcitx/fcitx5-qt", "tag": "5.0.17" } ]
        },
        {
            "name": "os-release",
            "post-install": [
                "mkdir -p /usr/share/runtime/lib/plugins/"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "os-release"
                },
                {
                    "type": "file",
                    "path": "issue"
                },
                {
                    "type": "file",
                    "path": "issue.net"
                },
                {
                    "type": "file",
                    "path": "org.kde.Sdk.appdata.xml"
                },
                {
                    "type": "file",
                    "path": "org.kde.Platform.appdata.xml"
                },
                {
                    "type": "file",
                    "path": "os-release-Makefile",
                    "dest-filename": "Makefile"
                },
                {
                    "type": "script",
                    "commands": [],
                    "dest-filename": "configure"
                }
            ]
        }
    ]
}
