            "sources": [ { "type": "archive", "url": "https://download.qt.io/official_releases/qt/6.4/6.4.2/submodules/qtserialport-everywhere-src-6.4.2.tar.xz", "sha256": "336d95919037800184b3c3de8ccb6f62954b20f3756c05adce8d5010504340fa" } ]
        },
        {
            "name": "qt6-qtwebsockets",
            "buildsystem": "cmake-ninja",
