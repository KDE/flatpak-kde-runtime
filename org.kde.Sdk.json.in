            "sources": [ { "type": "archive", "url": "https://download.qt.io/official_releases/qt/6.4/6.4.2/submodules/qtmultimedia-everywhere-src-6.4.2.tar.xz", "sha256": "7f2b70deeada911c8e660e2801286657f297a5d1d543d1f6bfa856f28972c776" } ]
        },
        {
            "name": "qt6-qtsensors",
            "buildsystem": "cmake-ninja",
            "cleanup-platform": [ "/bin" ],
            "sources": [ { "type": "archive", "url": "https://download.qt.io/official_releases/qt/6.4/6.4.2/submodules/qtsensors-everywhere-src-6.4.2.tar.xz", "sha256": "455619ff28a39f4caba49c9e1952fbcfafc8ffc893b437d653d5465a077ee656" } ]
        },
        {
            "name": "qt6-qtimageformats",
            "buildsystem": "cmake-ninja",
            "cleanup-platform": [ "/bin" ],
            "sources": [ { "type": "archive", "url": "https://download.qt.io/official_releases/qt/6.4/6.4.2/submodules/qtimageformats-everywhere-src-6.4.2.tar.xz", "sha256": "fc5f999ae0779a67d5507956d4dd315386eb81cf6ccba632de039bb9eee11707" } ]
        },
        {
            "name": "qt6-connectivity",
            "buildsystem": "cmake-ninja",
            "cleanup-platform": [ "/bin" ],
            "sources": [ { "type": "archive", "url": "https://download.qt.io/official_releases/qt/6.4/6.4.2/submodules/qtconnectivity-everywhere-src-6.4.2.tar.xz", "sha256": "8c9b44b239e42b4c4d6fca5f427904e688890b2a1bfb6bcbe5e6e2afcdc5d7af" } ]
        },
        {
